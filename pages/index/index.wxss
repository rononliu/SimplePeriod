.calendar-container {
  padding: 0;
  position: relative;
  background: #fff5f5;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding-bottom: 0;  /* 移除底部padding */
}

.calendar-header {
  flex-shrink: 0;  /* 防止头部压缩 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #ff9999;
  color: white;
  position: relative;
}

.current-month {
  font-size: 40rpx;
  font-weight: 500;
  color: white;
  display: flex;
  align-items: center;
}

.current-month .unit {
  color: #9b5d55;
  margin: 0 8rpx;
}

.prev-month, .next-month {
  padding: 0 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}

.arrow-icon {
  width: 48rpx;
  height: 48rpx;
}

.weekday-header {
  flex-shrink: 0;  /* 防止周标题压缩 */
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  background: #fff8e1;
  border-bottom: 2rpx solid #ffe0e0;
}

.weekday-item {
  text-align: center;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #666;
}

.calendar-body {
  flex: 1;  /* 让日历主体自适应剩余空间 */
  background: white;
  border: 2rpx solid #ffe0e0;
  border-top: none;
  overflow-y: auto;
}

.calendar-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
}

.calendar-cell {
  height: 100rpx;
  border: 2rpx solid #ffe0e0;
  padding: 8rpx;
  position: relative;
  overflow: visible;
}

.cell-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: 2;
  position: relative;
  padding-right: 4rpx;
  padding-top: 4rpx;
}

.date-number {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  position: relative;
  z-index: 2;
}

.today-mark {
  position: absolute;
  top: 30rpx;
  right: -6rpx;
  background: #ff8833;
  color: white;
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  transform: rotate(10deg);
  font-style: italic;
  box-shadow: 1rpx 1rpx 3rpx rgba(0, 0, 0, 0.2);
  z-index: 3;
  font-weight: bold;
}

.period-start, .period-end {
  color: #333;
  background: transparent;
  border-radius: 0;
}

.period-duration {
  background: transparent;
}

.line-left, .line-right {
  position: absolute;
  top: 50%;
  height: 8rpx;
  z-index: 1;
}

.line-left {
  right: 50%;
  left: 0;
}

.line-right {
  left: 50%;
  right: 0;
}

.line-left, .line-right {
  background: transparent;
}

.dashed-line .line-left,
.dashed-line .line-right {
  background: repeating-linear-gradient(
    to right,
    #ff4d4d 0,
    #ff4d4d 8rpx,
    transparent 8rpx,
    transparent 16rpx
  ) !important;
}

.line-left.with-arrow::before,
.line-right.with-arrow::after {
  content: '';
  position: absolute;
  top: -8rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
}

.line-left.with-arrow::before {
  left: 0;
  border-right: 16rpx solid #ff4d4d;
}

.line-right.with-arrow::after {
  right: 0;
  border-left: 16rpx solid #ff4d4d;
}

.dashed-line .line-left.with-arrow::before {
  border-right-color: #ff4d4d;
}

.dashed-line .line-right.with-arrow::after {
  border-left-color: #ff4d4d;
}

.period-start .line-left.with-arrow::before,
.period-end .line-right.with-arrow::after {
  z-index: 3;
}

.period-controls {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
}

.period-btn {
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
}

.start {
  background: #ff9999;
  color: white;
}

.end {
  background: #ff6666;
  color: white;
}

.cancel {
  background: #999999;
  color: white;
}

.floating-menu {
  position: fixed;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  padding: 12rpx 0;
  z-index: 1000;
  transform: translateX(-50%);
  min-width: 240rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  transition: all 0.2s;
}

.menu-item:active {
  background: rgba(255, 153, 153, 0.1);
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #666666;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.menu-item text {
  color: #666;
  font-size: 28rpx;
}

.bottom-container {
  flex-shrink: 0;  /* 防止底部压缩 */
  padding: 20rpx;
  margin-top: 0;  /* 移除顶部margin */
}

.calendar-tips {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: flex-end;
}

.tip-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 77, 0.1);
}

.tip-line {
  width: 30rpx;
  height: 6rpx;
  margin-right: 8rpx;
}

.tip-line.solid {
  background: #ff4d4d;
}

.tip-line.dashed {
  background: repeating-linear-gradient(
    to right,
    #ff4d4d 0,
    #ff4d4d 4rpx,
    transparent 4rpx,
    transparent 8rpx
  );
}

.tip-item text {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

.countdown-bar {
  flex-shrink: 0;  /* 防止底部压缩 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  background: #e6f7ff;  /* 添加蓝色背景 */
  border-top: 2rpx solid #91d5ff;  /* 添加上边框 */
  border-bottom: 2rpx solid #91d5ff;  /* 添加下边框 */
}

.star-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 0 16rpx;
}

.countdown-text {
  margin: 0 20rpx;
  display: flex;
  align-items: center;
}

.countdown-number {
  color: rgba(215, 88, 51);
  font-size: 32rpx;
} 