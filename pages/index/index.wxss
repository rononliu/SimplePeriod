.calendar-container {
  padding: 0;
  position: relative;
  background: #fff5f5;
  min-height: 100vh;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #ff9999;
  color: white;
  position: relative;
}

.calendar-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 20rpx;
  background: linear-gradient(to bottom right, transparent 50%, #ffeb3b 50%);
}

.current-month {
  font-size: 32rpx;
  font-weight: 500;
}

.prev-month, .next-month {
  padding: 0 30rpx;
  font-size: 36rpx;
}

.weekday-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  background: #fff8e1;
  border-bottom: 2rpx solid #ffe0e0;
}

.weekday-item {
  text-align: center;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #666;
}

.calendar-body {
  background: white;
  border: 2rpx solid #ffe0e0;
  border-top: none;
}

.calendar-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
}

.calendar-cell {
  height: 100rpx;
  border: 2rpx solid #ffe0e0;
  padding: 8rpx;
  position: relative;
  overflow: visible;
}

.cell-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: 2;
  position: relative;
  padding-right: 4rpx;
  padding-top: 4rpx;
}

.date-number {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  position: relative;
  z-index: 2;
}

.today-mark {
  position: absolute;
  top: 30rpx;
  right: -6rpx;
  background: #ff8833;
  color: white;
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  transform: rotate(10deg);
  font-style: italic;
  box-shadow: 1rpx 1rpx 3rpx rgba(0, 0, 0, 0.2);
  z-index: 3;
  font-weight: bold;
}

.period-start, .period-end {
  color: #333;
  background: transparent;
  border-radius: 0;
}

.period-duration {
  background: transparent;
}

.line-left, .line-right {
  position: absolute;
  top: 50%;
  height: 8rpx;
  z-index: 1;
}

.line-left {
  right: 50%;
  left: 0;
}

.line-right {
  left: 50%;
  right: 0;
}

.line-left, .line-right {
  background: transparent;
}

.dashed-line .line-left,
.dashed-line .line-right {
  background: repeating-linear-gradient(
    to right,
    #ff4d4d 0,
    #ff4d4d 8rpx,
    transparent 8rpx,
    transparent 16rpx
  ) !important;
}

.line-left.with-arrow::before,
.line-right.with-arrow::after {
  content: '';
  position: absolute;
  top: -8rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
}

.line-left.with-arrow::before {
  left: 0;
  border-right: 16rpx solid #ff4d4d;
}

.line-right.with-arrow::after {
  right: 0;
  border-left: 16rpx solid #ff4d4d;
}

.dashed-line .line-left.with-arrow::before {
  border-right-color: #ff4d4d;
}

.dashed-line .line-right.with-arrow::after {
  border-left-color: #ff4d4d;
}

.period-start .line-left.with-arrow::before,
.period-end .line-right.with-arrow::after {
  z-index: 3;
}

.period-controls {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
}

.period-btn {
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
}

.start {
  background: #ff9999;
  color: white;
}

.end {
  background: #ff6666;
  color: white;
}

.cancel {
  background: #999999;
  color: white;
}

.floating-menu {
  position: fixed;
  background: white;
  border: 2rpx solid #ffcccc;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 153, 153, 0.2);
  padding: 10rpx;
  z-index: 1000;
  transform: translateX(-50%);
  min-width: 300rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #ffe6e6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  position: relative;
  background: #ff9999;
}

.icon-start {
  background: #ff9999;
  border-radius: 50%;
}

.icon-start::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: translate(-25%, -50%) rotate(45deg);
}

.icon-end {
  background: #ff6666;
  border-radius: 50%;
}

.icon-end::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #fff;
  border-top: 4rpx solid #fff;
  transform: translate(-75%, -50%) rotate(45deg);
}

.icon-cancel {
  border: 2rpx solid #ff9999;
  border-radius: 50%;
}

.icon-cancel::before,
.icon-cancel::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 24rpx;
  height: 4rpx;
  background: #ff9999;
}

.icon-cancel::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.icon-cancel::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.icon-details {
  border: 2rpx solid #ff9999;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-details::after {
  content: '?';
  color: #ff9999;
  font-size: 24rpx;
  font-weight: bold;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.menu-item text {
  color: #666;
  font-size: 28rpx;
}

.menu-item:active {
  background: #fff5f5;
}

.bottom-container {
  padding: 20rpx;
  margin-top: 20rpx;
}

.calendar-tips {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: flex-end;
}

.tip-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 77, 0.1);
}

.tip-line {
  width: 30rpx;
  height: 6rpx;
  margin-right: 8rpx;
}

.tip-line.solid {
  background: #ff4d4d;
}

.tip-line.dashed {
  background: repeating-linear-gradient(
    to right,
    #ff4d4d 0,
    #ff4d4d 4rpx,
    transparent 4rpx,
    transparent 8rpx
  );
}

.tip-item text {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

.countdown-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  background: rgba(197, 231, 255);
  border-top: 2px solid rgba(70, 57, 46);
  border-bottom: 2px solid rgba(70, 57, 46);
}

.countdown-text {
  color: rgba(215, 88, 51);
  font-size: 32rpx;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
}

.countdown-number {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.star-icon {
  color: #ffcc66;
  font-size: 24rpx;
} 